{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "src/",
        "baseUrl": "src/",

        "allowJs": true,
        "experimentalDecorators": true,
        "strict": true,
        "noImplicitReturns": true,
        "isolatedModules": true
    }
}
